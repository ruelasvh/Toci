<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="3dp"
    android:layout_height="60dp"
    android:layout_marginTop="1dp">

    <RatingBar
        android:id="@+id/custom_card_main_inner_ratingbar"
        style="@style/main_style_inner_ratingbar"
        android:numStars="5"
        android:stepSize="1.0"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/custom_card_inner_green_description"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:textColor="#009949"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />
    <!-- android:textColor="@android:color/holo_green_light" -->


    <TextView
        android:layout_below="@+id/custom_card_inner_green_description"
        android:id="@+id/custom_card_main_inner_subtitle"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="#BBB"
        android:layout_marginLeft="8dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>