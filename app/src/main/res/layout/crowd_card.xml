<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/crowd_Card_inner_simple_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp">

        <RatingBar
            android:id="@+id/crowd_Card_inner_ratingbar"
            style="@style/main_style_inner_ratingbar"
            android:numStars="5"
            android:stepSize="1.0"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/crowd_Card_inner_cover_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/holo_green_light"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/crowd_Card_distance"
            android:layout_below="@+id/crowd_Card_inner_ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="#BBB"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="3dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/crowd_Card_specials_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Specials"
        android:textColor="#0401cc"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/crowd_Card_special1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\u2022 Special 1"
        android:textColor="#d73232"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/crowd_Card_special2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\u2022 Special 2"
        android:textColor="#ffbf00"
        android:textSize="17dp" />


</LinearLayout>