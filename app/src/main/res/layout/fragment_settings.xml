<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context="com.timemachine.toci.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/about"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="false"
        android:layout_marginTop="54dp"
        android:background="@color/white"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:text="About"
        android:textAllCaps="false"
        android:textSize="16dp" />

    <View
        android:id="@+id/dividerAbout"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignBottom="@+id/about"
        android:layout_marginLeft="20dp"
        android:background="@color/light_grey" />

    <Button
        android:id="@+id/legalPrivacyPolicy"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/about"
        android:layout_centerInParent="false"
        android:background="@color/white"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:text="Privacy Policy"
        android:textAllCaps="false"
        android:textSize="16dp" />


    <View
        android:id="@+id/dividerPrivacy"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignBottom="@+id/legalPrivacyPolicy"
        android:layout_marginLeft="20dp"
        android:background="@color/light_grey" />

    <Button
        android:id="@+id/legalTermsConditions"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/legalPrivacyPolicy"
        android:layout_centerInParent="false"
        android:background="@color/white"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:text="Terms and Contitions"
        android:textAllCaps="false"
        android:textSize="16dp" />

    <Button
        android:id="@+id/signout"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="245dp"
        android:background="@color/white"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:text="Log Out"
        android:textAllCaps="false"
        android:textColor="#fa0101"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/detailsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="36dp"
        android:text="DETAILS"
        android:textColor="@color/PrimaryTextPrimaryColor"
        android:textSize="10sp"
        tools:text="DETAILS" />

    <TextView
        android:id="@+id/sessionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/signout"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="52dp"
        android:layout_marginLeft="20dp"
        android:text="SESSION"
        android:textColor="@color/PrimaryTextPrimaryColor"
        android:textSize="10sp"
        tools:text="SESSION" />

</RelativeLayout>
