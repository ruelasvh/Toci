<resources>

    <!-- Base application theme. -->
    <style name="AppThemeMain" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/PrimaryColor</item>
        <item name="colorPrimaryDark">@color/PrimaryDarkColor</item>
        <item name="colorAccent">@color/PrimaryAccentColor</item>
        <item name="android:textColorPrimary">@color/PrimaryTextPrimaryColor</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowBackground">@color/PrimaryWindowBackground</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="android:background">@color/PrimaryColor</item>
        <item name="popupTheme">@style/Theme.AppCompat.NoActionBar</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ToolBarStyleDark" parent="">
        <item name="android:background">@color/black_transparent</item>
        <item name="popupTheme">@style/Theme.AppCompat.NoActionBar</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <!-- Login activity theme startes here -->
    <style name="AuthenMainTheme" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/PrimaryColor</item>
        <item name="colorPrimaryDark">@color/PrimaryColor</item>
        <item name="colorAccent">@color/PrimaryAccentColor</item>
    </style>

    <style name="AuthenDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/PrimaryAccentColor</item>
        <item name="android:textColor">@color/PrimaryNavigationColor</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- Login activity theme ends here -->

    <!-- Non-material theme -->

    <!-- the theme applied to the application or activity for v<v21 -->
    <style name="AppThemeTransparentActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>


    <!-- the theme applied to the application or activity for v<v21 blue -->
    <style name="AppThemeSecondary" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/SecondaryActionBar</item>
        <item name="android:actionBarTabBarStyle">@style/ActionBartTabBar</item>
        <item name="colorPrimary">@color/PrimaryColor</item>
        <item name="colorPrimaryDark">@color/PrimaryDarkColor</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/SecondaryActionBar</item>
        <item name="actionBarTabBarStyle">@style/ActionBartTabBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="TransparentActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/black_transparent</item>

        <!-- Support library compatibility -->
        <item name="background">@color/black_transparent</item>
    </style>

    <style name="SecondaryActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">


        <!-- Support library compatibility -->

    </style>

    <style name="ActionBartTabBar" parent="@style/Widget.AppCompat.Light.ActionBar.TabBar">
        <item name="android:background">@color/white</item>

        <item name="background">@color/white</item>
    </style>

    <style name="AppThemeMain.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeMain.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>